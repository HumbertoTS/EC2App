<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/cat_background"
    android:elevation="3dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/pedidotitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:text="Title"
        android:textColor="#373b54"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/photoprod"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pedidotitle"
        app:srcCompat="@drawable/chifaaeropuerto" />

    <TextView
        android:id="@+id/pricetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="#373b54"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/photoprod"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="@+id/photoprod"
        app:layout_constraintTop_toBottomOf="@+id/photoprod"
        app:layout_constraintVertical_bias="0.171" />

    <TextView
        android:id="@+id/pricesymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:text="S/."
        android:textColor="#FF3000"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/pricetitle"
        app:layout_constraintEnd_toStartOf="@+id/pricetitle"
        app:layout_constraintTop_toBottomOf="@+id/photoprod" />

    <TextView
        android:id="@+id/addbtn"
        android:layout_width="67dp"
        android:layout_height="21dp"
        android:background="@drawable/btn_style"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="3dp"
        android:text="AÃ±adir"
        android:textAlignment="center"
        android:textColor="#F8F5F5"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/photoprod"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/photoprod"
        app:layout_constraintTop_toBottomOf="@+id/pricetitle"
        tools:layout_margin="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>